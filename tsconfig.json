{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types": [
      "node",
      "chai",
      "chai-as-promised",
      "sinon",
      "sinon-chai",
      "mocha",
      "cookie-parser",
      "express",
      "reflect-metadata",
      "supertest",
      "json-schema"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "multipartfiles",
    "swagger",
    "servestatic",
    "socketio",
    "ajv",
    "lib"
  ]
}